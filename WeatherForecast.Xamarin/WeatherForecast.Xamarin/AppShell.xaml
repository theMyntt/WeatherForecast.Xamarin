<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:WeatherForecast.Xamarin.Views"
    Shell.FlyoutBehavior="Flyout"
    x:Class="WeatherForecast.Xamarin.AppShell">

    <ShellContent
        Title="Clima"
        ContentTemplate="{DataTemplate local:ForecastView}"
        Route="Forecast"/>

    <ShellContent
        Title="Localizações"
        ContentTemplate="{DataTemplate local:LocationView}"
        Route="FindLocations"/>
</Shell>

